<div id="carouselExampleControls" class="carousel slide m-3" data-ride="carousel">
  <div class="carousel-inner">
    <% @cocktails.each_with_index do |cocktail, i| %>
    <div class="carousel-item <%= "active " if i==0 %>">
      <% if cocktail.photo.attached? %>
        <div class="col d-flex justify-content-center"><%= cl_image_tag cocktail.photo.key, width: 900, height: 350, crop: :fill %></div>
      <% else %>
        <%= image_tag 'https://images.immediate.co.uk/production/volatile/sites/30/2020/08/mojito-cocktails-814a3f7.jpg?quality=90&resize=500%2C454' %>
      <% end %>
    </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
